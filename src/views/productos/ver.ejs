<%- include("../header"); %>
<div class="col-12">
    <h3>Productos</h3>
    <a href="/productos/agregar" class="btn btn-primary mb-2">Agregar</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Editar</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            <% productos.forEach(producto => { %>
            <tr>
                <td><%= producto.nombre %></td>
                <td><%= producto.precio %>$</td>
                <td>
                    <a href="/productos/editar/<%= producto.id %>" class="btn btn-success">
                        Editar
                    </a>
                </td>
                <td>
                    <a href="/productos/eliminar/<%= producto.id %>" class="btn btn-danger">
                        Eliminar
                    </a>
                </td>
            </tr>
            <% })%>
        </tbody>
    </table>
    <p>Pagina de inicio <a href="http://localhost:3000/">Home</a></p>
</div>
<%- include("../footer"); %>