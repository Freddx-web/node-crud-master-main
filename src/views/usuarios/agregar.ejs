<%- include("../header"); %>
<div class="col-12">
    <h3>Agregar usuario</h3>
    <hr>
    <form method="post" action="/usuarios/insertar">
        <div class="form-group">
            <label for="nombre">Nombre usuarios</label>
            <input required id="nombre" placeholder="Nombre del usuario" class="form-control" type="text"
                name="nombre">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input required id="email" placeholder="Email" class="form-control" type="email"
                name="email">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input required id="password" placeholder="Password" class="form-control" type="text"
                name="password">
        </div>
        <br>
        <div class="form-group">
            <button class="btn btn-primary">Guardar</button>
            &nbsp;<a href="/usuarios" class="btn btn-light">Volver</a>
        </div>
    </form>
</div>
<%- include("../footer"); %>